<% content_for :navbar do %>
  <%= render partial: 'shared/bookmark_nav_bar', locals: { topic: @topic, bookmark: @bookmark}  %>
<% end %>

 <%= form_for [@topic, @bookmark], class: "form-horizontal" do |f| %>
  <% if @bookmark.errors.any? %>
    <% @bookmark.errors.full_messages.each do |error| %>
  <% end %>
<% end %>

<div class="form-group">
  <%= f.label :url, class: "col-sm-2 control-label" %>
  <%= f.text_field :url, class: "form-control" %>
</div>
<%= f.submit 'Save', class: 'btn btn-primary btn-block' %>

<% end %>
