<div class="col-md-3 bookmark">
  <div class="thumbnail">
    <img alt="Bookmark Thumbnail" src="http://lorempixel.com/output/people-q-c-600-200-1.jpg" />
    <div class="caption">
      <strong>
        <%= bookmark.url %>
      </strong>

      <p>
        <%= link_to '', edit_topic_bookmark_path(topic.id, bookmark.id), id: "edit-#{bookmark.id}", class: 'glyphicon glyphicon-pencil index-icons' %>
      </p>
      <p>
        <%= link_to '', topic_bookmarks_path(topic.id, bookmark.id), method: :destroy, id: "destroy-bookmark-#{bookmark.id}-from-index", class: 'glyphicon glyphicon-trash index-icons' %>
      </p>
    </div>
  </div>
</div>
