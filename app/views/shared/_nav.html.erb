<div class="logo">
  <h1>Bookmark Manager</h1>
</div>
<% if current_user %>
<ul class="custom-nav nav nav-tabs">
  <li class="<%= active?(root_path) %>">
    <%= link_to "Home", root_path %>
  </li>
  <li class="<%= active?(topics_path) %>">
    <%= link_to "Topics", topics_path %>
  </li>
    <% if current_page?(root_path) %>
    <li class="<%= active?(user_path(current_user.id)) %>">
      <%= link_to "My Bookmarks", user_path(current_user.id), id: "users-show-path" %>
    </li>

    <% else %>
    <li class="<%= active?(new_topic_path) %>">
      <%= link_to "Add New Topic", new_topic_path, id: 'new-topic-from-nav' %>
    </li>
  <% end %>
  <li class="dropdown pull-right">
    <a href="#" data-toggle="dropdown" class="dropdown-toggle">Options<strong class="caret"></strong>
    </a>
    <ul class="dropdown-menu">
      <li>
        <%= link_to "Log Out", destroy_user_session_path, method: :destroy %>
      </li>
    </ul>
  </li>
</ul>
<% end %>
