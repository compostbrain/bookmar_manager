<div class="container">

  <div class="well">
      <h3><%= link_to "#{topic.title}", topic, id: "topic-show-path-#{topic.id}" %></h3><span><%= link_to '', topic_path(topic), method: :delete, id: "delete-topic-#{topic.id}-from-index", class: "glyphicon glyphicon-trash pull-right", data: { confirm: 'Are you sure?' }  %></span>
  </div>

  <div class="col-md-12", id="<%= topic.slug %>">
    <div class="row">
      <% topic.bookmarks.each do |bookmark| %>
        <%= render partial: 'shared/bookmark_card', locals: { topic: topic, bookmark: bookmark} %>
      <% end %>
    </div>
  </div>

</div>
