<h3>
  <%= link_to "#{topic.title}", topic, id: "show-topic-path" %>
</h3>

<%= link_to 'Delete', topic_path(topic), method: :delete,  id: "delete-topic-#{topic.id}-from-index", data: { confirm: 'Are you sure?' }  %>
<div class="col-md-12">
  <div class="row">
    <% topic.bookmarks.each do |bookmark| %>
      <%= render 'shared/bookmark_card', bookmark: bookmark %>
    <% end %>
  </div>
</div>
